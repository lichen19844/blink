.classic-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.classic-container-music{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    height:100%;
    background: linear-gradient(112.53245250420684deg, rgba(248, 198, 215,1) 5.736111111111111%,rgba(175, 233, 249,1) 96.29166666666666%);
}

.episode-header {
    /* 当元素需要占满整个屏幕，设置width为100% */
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    /* center 垂直居中 */
    align-items: center;
    /* 两端分布 */
    justify-content: space-between;
    border-top: 1px solid #f5f5f5;
    /* border-bottom: 1px solid #f5f5f5; */
}

.episode {
    margin-left: 20rpx;
    margin-top: 4rpx;
}

.like {
    margin-top: 6rpx;
    /* border: 1px solid;
