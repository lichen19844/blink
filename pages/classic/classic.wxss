.classic-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.episode-header {
    /* 当元素需要占满整个屏幕，设置width为100% */
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 100rpx;
    /* center 垂直居中 */
    align-items: center;
    /* 两端分布 */
    justify-content: space-between;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}

.episode {
    margin-left: 20rpx;
    margin-top: 4rpx;
}

.like {
    margin-top: 6rpx;
}

.navi{
    /* 到底部设置绝对高度 */
    position: absolute;
    bottom: 40rpx;
}