    margin-top: 150rpx;
    border-radius: 50%;
    box-sizing: border-box;
    border: 12px solid rgba(82, 1, 1, 0.7);
    /* box-shadow: 0 0 0 10px rgba(243, 106, 34, .4); */
    /* position: relative; */
