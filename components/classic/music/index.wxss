.vinyl-img{
  /* border-radius: 50%; */
  /* border: 1px solid; */
  width: 580rpx;
  height: 580rpx;
  position: absolute;
  bottom: 185rpx;
  z-index: -1;
  animation: mymove 10s linear infinite;
  animation-delay: 1.5s;
  transform-origin: 50.6% 50.6%;
}
  @keyframes mymove
  {
    from {
      transform:rotate(0deg);
    }
    to {
      transform:rotate(360deg);
    }
  }

.player-img{
    width: 120rpx;
    height: 120rpx;
    position: relative;
    bottom: 240rpx;
    /* border: 1px solid; */
}

.tag{
    width: 44rpx;
    height: 128rpx;
    position: relative;
    bottom: 180rpx;
    right: 310rpx;
    /* border: 1px solid; */
}

.content {
  position: relative;
  bottom: 100rpx;
}

.rotationCss {
    /* -webkit-transform: rotate(360deg); 貌似无效 */
    animation: rotation_css 10s linear infinite;
    -moz-animation: rotation_css 10s linear infinite;
    -webkit-animation: rotation_css 10s linear infinite;
    -o-animation: rotation_css 10s linear infinite;
    /* class结合style时，需要如下写法 */
    animation-play-state:paused;
}


/* ❤️试验animation暂停，在小程序里class需要连写成 rotationCss suspended */
.suspended{
    animation-play-state:paused;
}

@keyframes rotation_css {
    from {
        -webkit-transform: rotate(0deg);
    } to {
        -webkit-transform: rotate(360deg);
    }
}
/* 兼容ios */
@-webkit-keyframes rotation_css {
    from {
        -webkit-transform: rotate(0deg);
    } to {
        -webkit-transform: rotate(360deg);
    }
}


