/* components/search/index.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.header {
    background-color: #ffebee;
    position: fixed;
    height: 100rpx;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    width: 750rpx;
    align-items: center;
    z-index: 99;
    border: 1px solid;
}

.search-container {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 50px;
    margin-left: 20rpx;
    width: 100%;
}

.in-bar {
    color: #999;
}

.bar {
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    /* 行内元素 *//* inline系列如inline-block用于消除【占行】的块状特性 */
    /* 如果是inline，是不能带有宽高的 */
    display: inline-block;
    height: 68rpx;
    width: 100%;
    font-size: 28rpx;
}

.icon {
    width: 28rpx;
    height: 28rpx;
    margin-left: 24rpx;
    margin-right: 16rpx;
}

.cancel {
    line-height: 68rpx;
    width: 120rpx;
    right: 0;
    text-align: center;
    display: inline-block;
    /* border: 1px solid; */
}

.cancel-img {
    width: 28rpx;
    height: 28rpx;
    /* padding的作用是用来增大手指触碰面积 */
    padding: 14rpx 14rpx 14rpx 20rpx;
    /* margin-right: 20rpx; */
    /* border: 1px solid; */
}

.history {
    width: 690rpx;
    margin: 40rpx 0 20rpx 0;
    display: flex;
    font-size: 28rpx;
    margin-top: 160rpx;
    flex-direction: column;
}

.hot-search {
    margin-top: 70rpx;
}

.title {
    line-height: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

